<div id="app">
  <h1>{{ people.length }}</h1>
  Search <input v-model="nameFilter" list="names">
  <datalist id="names">
    <option v-for="person in people">{{ person.name }}</option>
  </datalist>
  <div v-for="person in people" v-if="isValidPerson(person)">
    <h2 v-on:click="toggleBio(person)">{{ person.name }}</h2>
    <h3 v-bind:class="{strike: person.bioVisible}">{{ person.bio }}</h3>
    <p v-on:click="deletePerson(person)">Delete Person</p>
    <input v-model="updateName">
    <input v-model="updateBio">
    <button v-on:click="updatePerson(person)">Update Person</button>
  </div>
  {{ people.length }}

  <ul>
    <li v-for="error in errors"> {{ error }} </li>
  </ul>
  <input v-model="newName">
  <input v-model="newBio">
  <button v-on:click="addPerson()">Add Person</button>
</div>
